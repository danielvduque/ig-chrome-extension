{
  "manifest_version": 3,
  "name": "InstaDownloader Pro",
  "version": "0.6",
  "permissions": [
    "contextMenus",
    "downloads",
    "storage",
    "declarativeNetRequest",
    "scripting"
  ],
  "host_permissions": [
    "https://*.instagram.com/*",
    "https://*.fbcdn.net/*",
    "https://*.cdninstagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instagram.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  }
}